<% provide(:title, @user.user_name) %>
<%= render 'shared/navbar_dark' %>

 
<div class="row justify-content-center no-gutters">
<div class="container-xl mt-5">
  <div class="m-3">
    <section class="user_info py-1 pl-1">
      <h1>
        <%= gravatar_for @user %>
        <br>
        <%= @user.user_name %>
      </h1>
      <%= link_to 'Edit my profile', edit_user_path(@user), class: "btn-primary btn" %> 
    </section>
  </div>

  <% if current_user.events.length > 0 %>
    <!-- find events user is an attending for -->
    <%= render 'events/eventsattending' %>
    <!-- find events user is an organizer for -->
    <%= render 'events/eventsorganized' %>
  <% end %>

</div>
</div>

